datasource db {
  provider     = "postgresql"
  url          = env("POSTGRES_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Store {
  id          Int           @id @default(autoincrement())
  code        String        @unique
  address     StoreAddress?
  managerName String
}

model StoreAddress {
  id           Int     @id @default(autoincrement())
  store        Store?  @relation(fields: [storeCode], references: [code])
  storeCode    String  @unique
  addressLine1 String?
  addressLine2 String?
  city         String
  country      String
  countryName  String
  postalCode   String?
  state        String?
  stateName    String?
}
