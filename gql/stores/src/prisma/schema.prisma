datasource db {
  provider     = "postgresql"
  url          = env("POSTGRES_URL")
  relationMode = "foreignKeys"
}

// https://github.com/prisma/prisma/issues/7470#issuecomment-873598065
generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/stores"
  binaryTargets   = ["native", "rhel-openssl-1.0.x"]
}

model Store {
  id          String        @id @default(uuid())
  code        String        @unique
  address     StoreAddress?
  managerName String
}

model StoreAddress {
  id           String  @id @default(uuid())
  store        Store?  @relation(fields: [storeCode], references: [code], onDelete: Cascade)
  storeCode    String  @unique
  addressLine1 String?
  addressLine2 String?
  city         String
  country      String
  countryName  String
  postalCode   String?
  state        String?
  stateName    String?
}
