{
  "name": "tx-microservices",
  "version": "0.0.0",
  "description": "Microservices Monorepository.",
  "scripts": {
    "build:interceptors": "yarn clean && lerna run build --scope=tx-shared-interceptors",
    "build:interfaces": "yarn clean && lerna run build --scope=tx-shared-interfaces",
    "build:directives": "yarn clean && lerna run build --scope=tx-shared-directives",
    "build:middleware": "yarn clean && lerna run build --scope=tx-shared-middleware",
    "build:schemas": "yarn clean && lerna run build --scope=tx-shared-schemas",
    "build:server": "yarn clean && lerna run build --scope=tx-shared-server",
    "build:connectors": "yarn clean && lerna run build --scope=tx-shared-connectors",
    "prebuild": "yarn clean && lerna run build --scope=tx-shared-interfaces && lerna run build --parallel --scope=tx-shared-interceptors --scope=tx-shared-directives --scope=tx-shared-middleware --scope=tx-shared-schemas --scope=tx-shared-server --scope=tx-shared-connectors",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --parallel --scope=tx-gateway --scope=tx-customers --scope=tx-inventories --scope=tx-orders --scope=tx-stores",
    "test": "lerna run test --parallel",
    "clean": "lerna run clean --parallel && rimraf {build,dist,.yalc,jest.json,*.log}",
    "prepare": "husky install",
    "format": "lerna run format --parallel"
  },
  "lint-staged": {
    "{scripts,src,test}/**/*.{ts,js,tsx,jsx}": [
      "node_modules/.bin/eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "class-validator": "0.13.2",
    "type-graphql": "1.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.10",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.1.2",
    "@prisma/client": "5.0.0",
    "lerna": "5.5.1",
    "husky": "8.0.1",
    "ts-node": "10.9.1",
    "ts-morph": "19.0.0",
    "jest": "29.0.3",
    "eslint": "8.23.1",
    "prettier": "^2.3.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "axios": "0.27.2",
    "couchbase": "4.2.4",
    "@cucumber/cucumber": "8.5.3",
    "@ekino/veggies": "1.4.0",
    "cucumber-html-reporter": "^5.2.0",    
    "delay": "^5.0.0",
    "docker-cli-js": "^2.9.0",
    "dotenv": "^16.0.2",
    "kill-port": "^2.0.1",
    "lodash": "^4.17.21",
    "spinnies": "^0.5.1",
    "prisma": "5.0.0"
  },
  "private": true,
  "workspaces": [
    "api/*",
    "shared/*",
    "gql/*"
  ]
}
